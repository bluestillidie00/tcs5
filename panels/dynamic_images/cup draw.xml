<panel>
	<!-- A base panel dynamic images with single centrally aligned logo-->
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

	<!-- Background image layer -->
	<container id="laye">
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

		<!-- Background image -->
		<widget class="picture" id="bgim" file="tcs/dynamic/cup draw" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" wants_mouse_events="false"/>
	</container>

	<container id="horC">
		<layout class="arrange_vertical_attachment" layout="-1, -3, -1" offset="0" gap="0"/>
		<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

		<widget class="spacer" />

		<container>
			<layout class="arrange_horizontal_attachment" layout="-2, -4, -2" offset="0" gap="0"/>
			<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>

				<widget class="object_portrait_picture" id="logo" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" wants_mouse_events="false">
				<!-- PROP_COMP -->
				<record id="object_property" get_property="comp" set_property="objt"/>
			</widget>
		</container>

		<widget class="spacer"/>
	</container>
</panel>
