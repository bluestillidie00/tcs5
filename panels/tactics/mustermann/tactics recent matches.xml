					<string id="pitch_draw_dugout" value="false" />
					<string id="pitch_draw_markings" value="true" />
					<string id="pitch_line_colour" value="faded text" />
					<integer id="pitch_touchline_width_percentage" value="80" />
					<string id="vertical" value="true" />
					<string id="force_left_to_right_events" value="true" />
				</container>
			</container>
			
			<container default_height="283" priority="2"/>
		</container>
		
		<container class="inner_subtle_box" appearance="boxes/titled/compact/paper" alignment="right,top" colour="negative" navigation_container="true">
			<translation id="title" translation_id="447606" type="use" value="Negatives[COMMENT: Match Analysis - Match negatives title]" />
