<panel height="36">
  <translation id="hint" translation_id="257223" type="use" value="Inbox[COMMENT - quicklink icon hint]" />

  <!-- news icon-->
  <widget class="picture" id="pict" file="icons/26px/inbox" image_alignment="centre_x, centre_y" red_replacement="sidebar text">
    <layout class="stick_to_sides_attachment" alignment="all" inset="0" />
  </widget>

  <!-- the bit with the number of unread news (text) -->
  <widget class="button" id="ibic" height="20" width="20" size="6" alignment="centre_x, centre_y" appearance="buttons/custom/interface/notification/button" colour="bg">
    <layout class="stick_to_sides_attachment" alignment="top" inset="-2"/>
    <layout class="stick_to_sides_attachment" alignment="right" inset="20"/>
    <attachment class="get_global_attachment" get_property="mgru" set_property="text"/>
    <attachment class="test_global_attachment" get_property="mgru" mode="equal" value="0" set_property="hidn"/>
  </widget>
</panel>