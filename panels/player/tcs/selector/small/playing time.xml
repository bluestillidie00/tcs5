          <widget class="client_object_property_panel" property="Pctp" auto_size="all">
            <record id="object_property">
              <integer id="get_property" value="objt" />
              <integer id="set_property" value="objt" />
            </record>
            <record id="widget_properties" alignment="left,centre_y" auto_size="all" size="large" style="bold" spec="text" />
          </widget>

        </container>

        <!-- Agreed Playing Time -->
        <container>
          <attachment_group class="horizontal_arrange_vertical_autosize_centre" />

          <widget class="text" auto_size="all" alignment="left,centre_y" colour="faded text" size="small">
            <translation id="text" translation_id="492007" type="use" value="Agreed:[COMMENT: AREA: Player Happiness; SUB-AREA: Contract Promises; FR-BN: 14013; TONE: Formal; CHARLIMIT: None; REF-ID: n/a; NOTE: contract promise type; shorter version of Agreed Playing Time]" />
          </widget>

          <widget class="client_object_property_panel" property="Pcpt" auto_size="all">
            <record id="object_property">
              <integer id="get_property" value="objt" />
              <integer id="set_property" value="objt" />
            </record>
            <record id="widget_properties" alignment="left,centre_y" auto_size="all" colour="faded text" size="small" />
          </widget>

        </container>

        <widget class="client_object_property_panel" property="Ppth" auto_size="all">
          <record id="object_property">
            <integer id="get_property" value="objt" />
            <integer id="set_property" value="objt" />
          </record>
          <record id="widget_properties" alignment="left,centre_y" auto_size="vertical" abbt="false" show_hover_popup="false" colour="faded text" size="small" />
        </widget>

      </container>
    </container>

  </container>

