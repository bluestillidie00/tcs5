							<string id="fxdt"/>
							<string id="fxMn"/>
							<string id="FXTm"/>
							<string id="fopt"/>
							<string id="FxTV"/>
							<string id="FxVn"/>
							<record id="FxRs"/>
							<record id="FxCG">
								<string id="multiline" value="false"/>
							</record>
							<string id="FxNm"/>
						</record>
					</record>
				</list>
			</container>

		</container>
	</container>
</panel>