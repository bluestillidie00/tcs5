<!-- image properties -->
<properties>

	<!-- image borders -->
	<!-- these determine how many pixels any content is inset from each side of the image -->
	<!-- (for example, in the case of a button, the content would be the text label) -->
	<record id="image_borders" left="14" right="14" top="4" bottom="6"/>

	<!-- image slices determine the points at which the image will be sliced to enable scaling -->
	<!-- the image will only slice in the directions slicing values are provided for-->
	<record id="image_slices" left="13" right="13" top="10" bottom="10"/>
	
	<record id="font_spec">
		<flags id="font" value="fonts/button"/> 
		<flags id="colour" value="standard_button_text"/> 
	</record>

	<colour id="red_replacement" name="ftue_background_purple"/>
    <flags id="transparency" value=".9"/> 

	<record id="primary_icon_properties" red_replacement="button_icon" />
	<record id="secondary_icon_properties" red_replacement="button_icon"/>
	
</properties>
